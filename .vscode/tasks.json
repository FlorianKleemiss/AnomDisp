{
	"version": "2.0.0",
	"windows": {
		"options": {
		  "shell": {
			"executable": "cmd.exe",
			"args": [
			  "/C",
			  // The path to VsDevCmd.bat depends on the version of Visual Studio you have installed.
        // this one can be used for either x86 or x64 compilation (e.g. 32 or 64 bit)
			  "\"C:/Program Files/Microsoft Visual Studio/2022/Community/VC/Auxiliary/Build/vcvarsall.bat\" x86_amd64",
			  "&&"
			]
		  }
		}
	  },
	  "tasks": [
		{
		  "type": "shell",
		  "label": "cl.exe build active file",
		  "command": "cl.exe",
		  "args": [
			"/Zi",
			"/EHsc",
			"/FS",
      "/std:c++20",
      "/I",
      "${fileDirname}\\gsl_stuff",
			"/Fe:",
			"${fileDirname}\\${fileBasenameNoExtension}.exe",
			"${file}",
      "convenience.cpp",
      "spherical_density.cpp",
      "/link",
      "${fileDirname}\\gsl_stuff\\lib\\x64\\Release\\gsl.lib"
		  ],
		  "problemMatcher": ["$msCompile"],
		  "group": {
			"kind": "build",
			"isDefault": true
		  }
		},
		{
			"type": "shell",
			"label": "cl.exe build calc_disp file",
			"command": "cl.exe",
			"args": [
			  "/Zi",
			  "/EHsc",
			  "/FS",
		    "/std:c++20",
        "/openmp:experimental",
        "/Od",
		    "/I",
		    "${fileDirname}\\gsl_stuff",
			  "/Fe:",
			  "${fileDirname}\\calc_disp.exe",
			  "calc_disp.cpp",
		    "convenience.cpp",
		    "spherical_density.cpp",
		    "/link",
		    "${fileDirname}\\gsl_stuff\\lib\\x64\\Release\\gsl.lib"
			],
			"problemMatcher": ["$msCompile"],
			"group": {
			  "kind": "build",
			  "isDefault": true
			}
		  },
	]
}